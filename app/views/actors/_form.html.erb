
<%= simple_form_for(@actor) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :piece %>
    <%= f.input :role %>
    <%= f.input :location %>
    <%= f.input :start_date %>
    <%= f.input :end_date %>
    <%= f.input :director %>
    <%= f.input :musiker %>
    <%= f.input :choreo %>
    <%= f.input :url %>
    <%= f.input :premiere %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
