
<%= simple_form_for(@director) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :piece %>
    <%= f.input :location %>
    <%= f.input :start_date, start_year: 2000, end_year: 2030  %>
    <%= f.input :end_date, start_year: 2000, end_year: 2030  %>
    <%= f.input :url %>
    <%= f.input :musiker %>
    <%= f.input :choreo %>
    <%= f.input :premiere %>
  </div>

  <div class="form-actions">
    <button><%= f.button :submit %></button>
  </div>
<% end %>
