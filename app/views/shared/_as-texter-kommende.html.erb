<div class="kommende">
  <span class="tag-kommende">NÃ¤chste Produktionen:</span>
  <div class="line-info-wrapper">
    <div class="info-kommende">

      <% @writer.each do |s|  %>
        <% unless s.premiere %>
          <div class="card-kommende">
            <h4 class="piece-title">

              <%= image_tag("star_sign.png", class: "rotate", height: "20px") %>

              <% if s.url.blank? %>
                <%= s.piece %>
              <% else %>
                <%= link_to s.piece, s.url, html_options = {target: "_blank", class: 'kommende-link-info'} %>
              <% end %>

              <%= image_tag("star_sign.png", class: "rotate", height: "20px") %>
            </h4>
            <p class="kommende-location"><%= s.comment %></p>
          </div>
        <% end %>
      <% end %>

    </div>
    <div class="kommende-line"></div>
  </div>
</div>
